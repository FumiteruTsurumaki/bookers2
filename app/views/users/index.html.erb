<%= render 'books/error', book: @book %>
<div class="row">
  <%= render 'books/left_column', user: @user, book: @book %>
  <div class='col-md-8 col-xs-9 offset-md-1'>
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user , :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>